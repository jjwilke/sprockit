#! /usr/bin/env python

import os
import commands
import sys

srcdir = sys.argv[1]
prefix = sys.argv[2]
cwd = os.getcwd()
builddir = os.path.abspath(cwd)

os.chdir(srcdir)
repo = commands.getoutput("hg identify")

header = """#ifndef %s_REPO_HEADER
#define %s_REPO_HEADER "%s"
#endif
""" % (prefix,prefix,repo)

os.chdir(builddir)
open("%s_repo.h" % prefix,"w").write(header)


